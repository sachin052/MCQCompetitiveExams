<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"

        android:orientation="vertical" android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:id="@+id/questionno"
                android:textColor="#000000"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/corner_button"
            android:layout_marginTop="5dp"
            android:id="@+id/option1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="A"
                android:id="@+id/answerimg1"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/answercircle"
                />
            <TextView
                android:layout_width="match_parent"
               android:textColor="#000"
                android:textSize="16sp"
                android:text="Option one"
                android:id="@+id/newoption1"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/corner_button"
            android:layout_marginTop="7dp"
            android:id="@+id/option2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="B"
                android:id="@+id/answerimg2"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/answercircle"
                />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Option one"
                android:id="@+id/newoption2"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginTop="7dp"
            android:id="@+id/option3"
            android:background="@drawable/corner_button"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="C"
                android:textColor="#000"
                android:id="@+id/answerimg3"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/answercircle"
                />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Option one"
                android:id="@+id/newoption3"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:id="@+id/option4"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corner_button"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="D"
                android:id="@+id/answerimg4"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/answercircle"
                />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#000"
                android:text="Option one"
                android:textSize="16sp"
                android:id="@+id/newoption4"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>